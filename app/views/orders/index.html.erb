
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <a href="<%= new_order_path %>" class="btn btn-primary float-right">New Order</a>
          <h5 class="card-title">
            Orders
          </h5>
        </div>

        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Customer</th>
                <th scope="col">Order Items</th>
                <th scope="col">Total</th>
                <th scope="col">Payed amount</th>
                <th scope="col">Remaining amount</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><strong><%= order.id %></strong></td>
                  <td><%= order.customer.name %></td>
                  <td>
                    <% order.order_items.each do |order_item| %>
                      <%= order_item.product.name %> => <%= order_item.quantity%>
                      </br>
                    <% end %>
                  </td>
                  <td><%= order.total %></td>
                  <td><%= order.payed_amount %></td>
                  <% if !order.remaining_amount || order.remaining_amount.to_f == 0 %>
                    <td><span class="badge badge_success py-1"><%= order.remaining_amount %></span></td>
                  <% else%>
                    <td><span class="badge badge_danger py-1"><%= order.remaining_amount %></span></td>
                  <% end %>
                  <td><%= link_to 'Show', order %></td>
                  <%# <td><%= link_to 'Edit', edit_order_path(order) %>
                  <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
