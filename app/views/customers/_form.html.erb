<div class="row">
  <div class="col-xl-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <h5 class="card-title">New Customer</h5>
        </div>
        <%= form_with(model: customer) do |form| %>
          <% if customer.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(customer.errors.count, "error") %>
                prohibited this customer from being saved:</h2>

              <ul>
                <% customer.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <form>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= form.label :name %>
                <%= form.text_field :name,
                                class: "form-control",
                                placeholder: "Name",
                                id: "inputEmail4" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :number %>
              <%= form.text_field :number, class: "form-control" %>
            </div>

            <%= form.submit "Submit", class: "btn btn-primary" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>

