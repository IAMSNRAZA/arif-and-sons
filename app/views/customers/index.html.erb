<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-30">
      <div class="card-body">
        <div class="card-header">
          <a href="<%= new_customer_path %>" class="btn btn-primary float-right">New Customer</a>
          <h5 class="card-title">
            Customers
          </h5>
        </div>

        <div class="table-responsive">
          <table class="table table-hover text-vertical-middle mb-0">
            <thead class="bort-none borpt-0">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Number</th>
                <th scope="col">Remaining balance</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><strong><%= customer.id %></strong></td>
                  <td><%= customer.name %></td>
                  <td><%= customer.number %></td>
                  <% if !customer.remaining_balance || customer.remaining_balance.to_f == 0 %>
                    <td><span class="badge badge_success py-1"><%= customer.remaining_balance %></span></td>
                  <% else%>
                    <td><span class="badge badge_danger py-1"><%= customer.remaining_balance %></span></td>
                  <% end %>
                  <td><%= link_to 'Show', customer %></td>
                  <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                  <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
